$acclist = @("jmoney", "plinktern") | ForEach-Object { $_.Trim().ToLower() }

# Get all AD users (enabled or disabled), convert names to lowercase
$acc = Get-ADUser -Filter * -Properties SamAccountName |
        Select-Object -ExpandProperty SamAccountName |
        ForEach-Object { $_.Trim().ToLower() }

foreach ($user in $acc) {
    if ($user -notin $acclist) {
        Disable-ADAccount -Identity $user
        Write-Host "Disabled AD account: $user"
    }
}


try {
    $acct = Get-ADUser "krbtgt" -Properties userAccountControl -ErrorAction Stop

    $uac = $acct.userAccountControl
    $newUac = $uac -band (-bnot 2)   # Remove the "disabled" bit

    Set-ADUser -Identity "krbtgt" -Replace @{ userAccountControl = $newUac }

    Write-Host "Re-enabled: krbtgt"
}
catch {
    Write-Host "Could not re-enable krbtgt: $_"
}

